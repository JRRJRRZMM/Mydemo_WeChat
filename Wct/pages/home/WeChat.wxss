.slider{
  height: 390rpx;
  width: 100%;
}
.slider swiper{
  height: 390rpx;
  width: 100%
}
.slider image{
  height: 390rpx;
  width: 100%;
}
/* 九宫格 */
.index-nav{
  display: flex;
  flex-wrap: wrap
}
.index-nav .nav-item{
  height: 200rpx;
  width: 33.3333%;
  box-sizing: border-box;
  border:1rpx solid #ddd;
  /* item子元素弹性布局 */
  display: flex;
  flex-direction: column; /*子元素按列布局   */
  justify-content: center;/*水平居中 垂直居中*/
  align-items: center;
  font-size: 14px;/*小程序推荐使用字体px单位*/
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
/* 将3 6 9边框去掉 */
.index-nav .nav-item:nth-child(3){
  border-right: 0;
}
.index-nav image{
  width: 80rpx;
  height: 80rpx;
}


